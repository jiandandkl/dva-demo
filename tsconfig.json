{
    "compilerOptions": {
      "target": "es6",
      "moduleResolution": "node",
      "jsx": "react",
      "module": "es2015",
      "sourceMap": true,
      "outDir": "./dist/",
      "skipLibCheck": true,
      "declarationDir": "dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }